        <filterLogic>and</filterLogic>
        <filters>
            <field>First_Name__c</field>
            <operator>EqualTo</operator>
            <value>
                <elementReference>Get_Candidate.First_Name__c</elementReference>
            </value>
        </filters>
        <object>Candidate__c</object>
        <valueField>First_Name__c</valueField>
    </dynamicChoiceSets>
    <environments>Default</environments>
    <formulas>
        <description>Get Today date as check point of date not less then today date</description>
        <name>PastDate</name>
