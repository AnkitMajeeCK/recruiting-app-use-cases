    <decisions>
        <description>Date Validation check to make sure not past date entererd</description>
        <name>Date_Validation_check</name>
        <label>Date Validation check</label>
        <locationX>0</locationX>
        <locationY>0</locationY>
        <defaultConnector>
            <targetReference>Wrong_Date_Entered</targetReference>
        </defaultConnector>
        <defaultConnectorLabel>Default Outcome</defaultConnectorLabel>
        <rules>
            <name>Date_checked</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>Date_and_time</leftValueReference>
                <operator>GreaterThanOrEqualTo</operator>
                <rightValue>
                    <elementReference>PastDate</elementReference>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>Create_Interview_Record</targetReference>
            </connector>
            <label>Date checked</label>
        </rules>
